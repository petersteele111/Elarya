<Window x:Class="Elarya.ElaryaGameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elarya"
        mc:Ignorable="d"
        Title="Elarya" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        
        <!-- Information Bar-->
        <Border BorderBrush="black" BorderThickness="1px" Grid.ColumnSpan="6">
            <StackPanel Orientation="Horizontal" Margin="20px 0 0 0">
                <TextBlock Text="Name: " FontSize="20px" FontWeight="Bold" VerticalAlignment="Center" />
                <!-- Place holder for generated value-->
                <TextBlock Text="Arya" FontSize="20px" VerticalAlignment="Center" />

                <TextBlock Text="Health: " FontSize="20px" FontWeight="Bold" VerticalAlignment="Center" Margin="180px 0 0 0"/>
                <!-- Place holder for generated value-->
                <TextBlock Text="100/100" FontSize="20px" VerticalAlignment="Center" />

                <TextBlock Text="Mana: " FontSize="20px" FontWeight="Bold" VerticalAlignment="Center" Margin="180px 0 0 0"/>
                <!-- Place holder for generated value-->
                <TextBlock Text="100/100" FontSize="20px" VerticalAlignment="Center" />

                <TextBlock Text="Exp: " FontSize="20px" FontWeight="Bold" VerticalAlignment="Center" Margin="180px 0 0 0"/>
                <!-- Place holder for generated value-->
                <TextBlock Text="5000" FontSize="20px" VerticalAlignment="Center" />

                <TextBlock Text="Time: " FontSize="20px" FontWeight="Bold" VerticalAlignment="Center" Margin="180px 0 0 0"/>
                <!-- Place holder for generated value-->
                <TextBlock Text="13:30 PM" FontSize="20px" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Quest Log -->
        <Border BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Quest Log" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center"/>
                <!-- Space to place quest log items -->
            </StackPanel>
        </Border>
        
        <!-- Main Window-->
        <Border BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4">
            <StackPanel>
                <TextBlock Text="Main Window" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center" />
                <!-- Space to place main window content -->
            </StackPanel>
        </Border>

        <!-- Inventory Panel-->
        <Border BorderBrush="Black" BorderThickness="0 0 0 1" Grid.Column="6" Grid.Row="1">
            <StackPanel Orientation="Vertical" Grid.Column="6" Grid.Row="1">
                <TextBlock Text="Inventory" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center" />
                <!-- Space to place inventory items -->
            </StackPanel>
        </Border>

        <!-- Message Panel-->
        <Border BorderBrush="Black" BorderThickness="0 0 1 0" Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Text="Messages" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center" />
                <!-- Space to list messages -->
            </StackPanel>
        </Border>

        <!-- User Actions-->
        <Border BorderBrush="Black" BorderThickness="0 0 1 0" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Text="User Actions" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center" />
                <!-- Space to place user action buttons -->
            </StackPanel>
        </Border>

        <!-- Spells/Fight-->
        <StackPanel Orientation="Vertical" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Spells/Fight" FontSize="36px" FontWeight="Bold" HorizontalAlignment="Center" />
            <!-- Space to place spells/fight abilities-->
        </StackPanel>
    </Grid>
</Window>
