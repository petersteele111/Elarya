<Window x:Class="Elarya.Presentation.Views.PlayerSetupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elarya.Presentation.Views"
        mc:Ignorable="d"
        Title="Player Setup" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="Welcome to Elarya" Grid.ColumnSpan="7" Grid.RowSpan="2" FontSize="48px" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkRed" />

            <Label Grid.Column="0" Grid.Row="2" Content="Name" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20px" FontWeight="Bold" />
            <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Width="200px" Name="Name" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Visibility="Hidden" Text="This is an error message" Name="NameError" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12px" Foreground="red"/>

            <Label Grid.Column="0" Grid.Row="4" Content="Race" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20px" FontWeight="Bold" />
            <ComboBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Width="200px" Name="RaceTypeComboBox" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Visibility="Hidden" Text="This is an error message" Name="RaceError" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12px" Foreground="red"/>
            
            <Label Grid.Column="0" Grid.Row="6" Content="Gender" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20px" FontWeight="Bold"/>
            <ComboBox Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" Width="200px" Name="GenderTypeComboBox" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Visibility="Hidden" Text="This is an error message" Name="GenderError" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12px" Foreground="red"/>

            <Label Grid.Column="4" Grid.Row="2" Content="Role" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20px" FontWeight="Bold"/>
            <ComboBox Grid.Column="5" Grid.Row="2" Grid.ColumnSpan="2" Width="200px" Name="JobTitleTypeComboBox" FontSize="20px" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Grid.Column="5" Grid.Row="3" Grid.ColumnSpan="2" Visibility="Hidden" Text="This is an error message" Name="JobTitleError" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12px" Foreground="red"/>

            <Button Grid.Column="5" Grid.Row="7" Content="OK" Name="OK" FontSize="24" FontWeight="Bold"  Background="DarkGreen" Foreground="White" Click="OKButton_Click"/>

        </Grid>
    </Grid>
</Window>

    